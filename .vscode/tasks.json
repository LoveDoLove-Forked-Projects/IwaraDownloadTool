{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Add Version",
			"group": "build",
			"type": "shell",
			"command": "bash ${workspaceFolder}/build/VersionManage.sh",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			},
			"windows": {
				"command": "cmd /c 'cd ${workspaceFolder}\\build && VersionManage.cmd'"
			}
		},
		{
			"label": "Mata Build",
			"group": "build",
			"type": "shell",
			"command": "cp ${workspaceFolder}/scripts/IwaraDownloadTool.mata.ts ${workspaceFolder}/dist/IwaraDownloadTool.mata.js",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			},
			"windows": {
				"command": "copy ${workspaceFolder}\\scripts\\IwaraDownloadTool.mata.ts ${workspaceFolder}\\dist\\IwaraDownloadTool.mata.js"
			}
		},
		{
			"label": "Main Build",
			"group": "build",
			"type": "shell",
			"command": "${workspaceFolder}/node_modules/.bin/tsc",
			"args": [
				"--project",
				"${workspaceFolder}"
			],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				//"close": true
			},
			"windows": {
				"command": "${workspaceFolder}\\node_modules\\.bin\\tsc.cmd"
			},
			"problemMatcher": []
		},
		{
			"label": "Build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Add Version",
				"Mata Build",
				"Main Build"
			],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				//"close": true
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}