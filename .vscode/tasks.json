{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Preprocess",
			"group": "build",
			"type": "shell",
			"command": "npm run preprocess",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "Release",
			"group": "build",
			"type": "shell",
			"command": "npm run release",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "Build",
			"group": "build",
			"type": "shell",
			"command": "${workspaceFolder}/node_modules/.bin/tsc",
			"args": [
				"--project",
				"${workspaceFolder}"
			],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"windows": {
				"command": "${workspaceFolder}\\node_modules\\.bin\\tsc.cmd"
			},
			"problemMatcher": []
		},
		{
			"label": "UserJS",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Preprocess",
				"Build",
				"Release"
			],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}