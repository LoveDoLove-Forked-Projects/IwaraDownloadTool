{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "alwaysStrict": false,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "removeComments": true,
    "moduleResolution": "node",
    "newLine": "crlf"
  },
  "include": [
    "utils/*.d.ts",
    "src/*.ts"
  ]
}
